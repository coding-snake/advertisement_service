{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.task_list'|trans }}</h1>

    <h2>
        <a href="{{ url('task_create')}}" title="{{ 'action.create'|trans }}">
            {{ 'action.create'|trans }}
        </a>
    </h2>

    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.created_at'|trans, }}</th>
                <th>{{ 'label.updated_at'|trans, }}</th>
                <th>{{ 'label.title'|trans }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th>{{ 'label.isAccepted'|trans }}</th>
                <th>{{ 'label.author'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for task in pagination.items %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.createdAt|format_date('long') }}</td>
                    <td>{{ task.updatedAt|format_date('long') }}</td>
                    <td>{{ task.title }}</td>
                    <td>
                        <a href="{{ url('category_show', {id: task.category.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ task.category.title }}
                        </a>
                    </td>
                    <td>
                        {{ task.isAccepted ? 'Tak' : 'Nie'}}
                    </td>
                    <td>{{ task.author.email }}</td>
                    <td>
                        <a href="{{ url('task_show', {id: task.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}